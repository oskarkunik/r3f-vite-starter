{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/src/*": ["src/*"],
      "@/*": ["src/*"],
    },
    "strict": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
  }
}
